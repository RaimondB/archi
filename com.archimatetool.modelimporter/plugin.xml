<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.archimatetool.modelimporter.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.file"
            id="com.archimatetool.modelimporter.importCommand"
            name="%command.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.archimatetool.modelimporter.ImportModelHandler"
            commandId="com.archimatetool.modelimporter.importCommand">
         <enabledWhen>
            <reference
                  definitionId="com.archimatetool.modelEnabled">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:import_menu?before=import_ext">
         <command
               commandId="com.archimatetool.modelimporter.importCommand"
               id="com.archimatetool.modelimporter.importMenu"
               label="%importHandler.label"
               style="push">
         </command>
      </menuContribution>
   </extension>
</plugin>
